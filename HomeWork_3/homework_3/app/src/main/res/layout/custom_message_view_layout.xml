<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/element_margin"
        android:layout_marginBottom="@dimen/element_margin"
        android:background="@drawable/bg_custom_linear_view"
        android:paddingStart="@dimen/element_margin"
        android:paddingEnd="@dimen/element_margin"
        android:text="@string/app_name"
        android:textColor="@color/white_dark" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/image_roud_size"
        android:layout_height="@dimen/image_roud_size"
        android:layout_marginEnd="@dimen/medium_margin"
        android:background="@drawable/bg_custom_image_view"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_custom_linear_view"
            android:orientation="vertical"
            android:padding="@dimen/text_margin">

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/text_frame_max_size"
                android:text="@string/title_draft"
                android:textColor="@color/teal_700"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="@dimen/text_frame_max_size"
                android:text="@string/message_draft"
                android:textColor="@color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>

        <com.fintech.homework_3.customview.FlexibleLayout
            android:id="@+id/flex"
            android:layout_width="@dimen/box_frame_max_size"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_margin"
            android:layout_marginBottom="@dimen/element_margin" />
    </LinearLayout>
</merge>